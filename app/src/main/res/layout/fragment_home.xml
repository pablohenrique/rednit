<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context="com.rednit.app.View.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:padding="10dp"
        android:src="@drawable/ic_action_settings" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_action_chat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:src="@drawable/ic_action_help" />


    <ImageView
        android:id="@+id/home_img_large_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="-40dp"
        android:background="@drawable/circular_stroked_home_profile_filled_large" />

    <ImageView
        android:id="@+id/home_img_medium_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="-40dp"
        android:background="@drawable/circular_stroked_home_profile_filled_medium" />

    <ImageView
        android:id="@+id/home_img_small_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="-40dp"
        android:background="@drawable/circular_stroked_home_profile_filled" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="115dp"
        android:text="@string/home_searching_stage_1"
        android:textColor="@color/grey2"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layout_result_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="420dp"
        android:visibility="invisible">

        <include layout="@layout/fragment_result_list" />

    </LinearLayout>

</FrameLayout>
